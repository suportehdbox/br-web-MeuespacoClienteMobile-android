    </style>

    <style name="btn_apagar">
        <item name="android:contentDescription">@string/image</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="btn_olho"  parent="@style/btn_apagar">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">13dp</item>
