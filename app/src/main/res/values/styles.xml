    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <!--<item name="colorPrimary">@color/my_awesome_red</item>-->
        <item name="colorPrimaryDark">#003a72</item>
        <item name="colorAccent">#ababab</item>
    </style>

    <style name="match_height_match_width">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="layout_style_activity" parent="@style/match_height_match_width">
        <item name="android:background">#C8C8C8</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="wrap_height_wrap_width">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wrap_height_fill_width">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="orange_button_wide" parent="@style/wrap_height_wrap_width">
        <item name="android:background">@drawable/orange_btn_wide</item>
        <item name="android:textColor">#975A13</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="edit_text" parent="@style/wrap_height_fill_width">
        <item name="android:background">@drawable/field_background</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10sp</item>
        <item name="android:inputType">textCapWords|textFilter</item>
        <item name="android:maxLength">40</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Theme com Background -->

    <style name="custom_itemlistview_simple">
        <item name="android:textColor">#4E4E4E</item>
        <item name="android:paddingLeft">7sp</item>
        <item name="android:paddingTop">2sp</item>
    </style>

    <style name="button_list_item" parent="@style/wrap_height_wrap_width">
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:paddingLeft">52dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_button_text_detail">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/help_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Menu Principal-->

    <style name="btn_menu_principal" parent="@style/wrap_height_wrap_width">
    </style>

    <!-- Itens de comunincação de acidente. -->

    <style name="fill_height_fill_width">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="fill_height_wrap_width">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="base_layout" parent="@style/fill_height_fill_width">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_content" parent="@style/base_layout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="main_content_list" parent="@style/main_content">
        <item name="android:background">@color/white</item>
    </style>

    <style name="claim_list_item" parent="@style/wrap_height_fill_width">
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:padding">10dip</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="claim_list_title" parent="@style/wrap_height_wrap_width">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">21dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="claim_list_status" parent="@style/wrap_height_wrap_width">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">@dimen/help_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="claim_list_label" parent="@style/wrap_height_wrap_width">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/help_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="claim_list_detail" parent="@style/wrap_height_wrap_width">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/help_text</item>
    </style>

    <style name="table_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginRight">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="input_field_row">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">12dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="btn_azul" parent="@style/wrap_height_fill_width">
        <item name="android:background">@drawable/btn_azul</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linear_layout" parent="@style/table_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">25sp</item>
    </style>

    <style name="collect_contacts_header">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="collect_contacts_header_text" parent="@style/fill_height_wrap_width">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="edit_text_note" parent="@style/edit_text">
        <item name="android:layout_height">80dip</item>
    </style>

    <style name="input_layout" parent="@style/wrap_height_fill_width">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textView_super">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView_label" parent="@style/textView_super">
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textView_body" parent="@style/textView_label">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
    </style>

    <style name="input_field_separator_horizontal">
        <item name="android:background">@color/separator</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="voice_note_meter_bar" parent="@style/wrap_height_fill_width">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:max">6</item>
        <item name="android:maxHeight">36dip</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
    </style>

    <style name="input_table" parent="@style/wrap_height_fill_width">
        <item name="android:background">@drawable/rounded_rectangle_white_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="voice_button_wide" parent="@style/wrap_height_wrap_width">
        <item name="android:background">@drawable/audio_bar_cover_trans</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="voice_note_time" parent="@style/wrap_height_wrap_width">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:textColor">@color/blue_gray</item>
    </style>

    <style name="voice_note_progress_bar" parent="@style/wrap_height_fill_width">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">90</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
    </style>

    <style name="voice_note_button_row" parent="@style/wrap_height_fill_width">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
    </style>

    <style name="voice_note_button" parent="@style/wrap_height_wrap_width">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
    </style>

    <style name="send_event_email_webview" parent="@style/wrap_height_fill_width">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_margin">10dip</item>
    </style>

    <!-- COMUNICAÇAO DE ACIDENTE -->

    <style name="custom_itemlistview">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#4E4E4E</item>
        <item name="android:paddingLeft">7sp</item>
        <item name="android:paddingTop">7sp</item>
        <item name="android:paddingBottom">7sp</item>
    </style>

    <!--NOTIFICACAO-->

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Shared Styles -->

    <style name="add_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableLeft">@drawable/btn_adicionar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:paddingLeft">52dip</item>
    </style>


    <!--COMPONENTE CADASTRO-->

    <style name="componente_cadastro">
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="txt_cadastro" parent="android:TextAppearance">
