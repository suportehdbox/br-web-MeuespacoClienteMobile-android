<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbarlocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default_1"
    android:layout_marginBottom="@dimen/margin_default_1"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default_1"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:gravity="bottom"
        >

        <LinearLayout
            android:id="@+id/ll_base_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/text_default_3"
            android:weightSum="3">

            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_1"
                android:layout_marginRight="@dimen/margin_default_1"
                android:minLines="2"
                android:layout_weight="1.9"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:textSize="@dimen/font_default_0"
                android:textColor="@color/text_default_1" />


            <LinearLayout
                android:id="@+id/ll_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textAlignment="gravity"
                    android:minLines="2"
                    android:textSize="@dimen/font_default_6"
                    android:textColor="@color/text_default_1"/>


                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:gravity="center_vertical|right"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="@dimen/margin_default_2"
                    android:layout_marginRight="@dimen/margin_default_1"
                    android:src="@drawable/arrow_down"/>


            </LinearLayout>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>