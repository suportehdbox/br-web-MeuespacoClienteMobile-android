<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default_4"
        android:layout_marginRight="@dimen/margin_default_4"
        android:layout_marginTop="@dimen/margin_default_4"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TextInputLayoutDefault">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/text_default_3"
                android:textColorHint="@color/hint_default_1"
                android:paddingTop="@dimen/margin_default_2"
                android:textSize="@dimen/font_default_2" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/ll_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:visibility="gone"
            android:gravity="right">

            <br.com.libertyseguros.mobile.view.custom.ImageViewCustom
                android:id="@+id/iv_clear"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/password_off" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_default_4"
        android:layout_marginRight="@dimen/margin_default_4"
        android:layout_marginTop="@dimen/margin_default_1"
        android:background="@color/line_default_1"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_msg_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default_4"
        android:layout_marginRight="@dimen/margin_default_4"
        android:text="@string/register_apolice_error"
        android:textColor="@color/text_default_8"
        android:textSize="@dimen/font_default_0"
        android:visibility="invisible" />

</LinearLayout>