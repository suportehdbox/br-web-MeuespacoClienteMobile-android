<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textItemNroApoliceMinhasApolices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="8855.300.2012/02"
        android:drawable="@android:color/transparent"
        style="@style/custom_itemlistview" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <TextView
	        android:id="@+id/textItemDescricaoMinhasApolices"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="10sp"
	        android:text="Medium Text"
	        android:drawable="@android:color/transparent"
	        style="@style/custom_itemlistview_simple"  
	        android:layout_gravity="center_vertical" />"

        <ImageView
            android:id="@+id/imgItemParcelaVencidaMinhasApolices"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_weight="0.1"
            android:src="@drawable/icon_atencao" 
            android:layout_gravity="center_vertical"/>
        
    </LinearLayout>
    
</LinearLayout>