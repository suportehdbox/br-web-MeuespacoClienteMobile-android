<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#40000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_2"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/background_app">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default_4"
            android:textSize="@dimen/font_default_2"
            android:textColor="@color/text_default_3"
            android:gravity="center"
            android:text="@string/location_alert"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default_4"
            android:layout_marginLeft="@dimen/margin_default_6"
            android:layout_marginRight="@dimen/margin_default_6"
            android:theme="@style/TextInputLayoutDefault">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:filterTouchesWhenObscured="true"
                android:inputType="number"
                android:paddingTop="@dimen/margin_default_2"
                android:singleLine="true"
                android:textColor="@color/text_default_3"
                android:textColorHint="@color/hint_default_1"
                android:textSize="@dimen/font_default_1" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_default_1"
            android:layout_marginLeft="@dimen/margin_default_6"
            android:layout_marginRight="@dimen/margin_default_6"
            android:background="@color/line_default_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_2"
            android:textSize="@dimen/font_default_2"
            android:textColor="@color/text_default_11"
            android:gravity="center"
            android:text="@string/Or"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default_6"
            android:layout_marginRight="@dimen/margin_default_6"
            android:theme="@style/TextInputLayoutDefault">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:filterTouchesWhenObscured="true"
                android:paddingTop="@dimen/margin_default_2"
                android:singleLine="true"
                android:textColor="@color/text_default_3"
                android:textColorHint="@color/hint_default_1"
                android:textSize="@dimen/font_default_1" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_default_1"
            android:layout_marginLeft="@dimen/margin_default_6"
            android:layout_marginRight="@dimen/margin_default_6"
            android:layout_marginBottom="@dimen/margin_default_4"
            android:background="@color/line_default_1"/>


        <Button
            android:id="@+id/bt_location"
            style="@style/ButtonDefault"
            android:layout_width="wrap_content"
            android:background="@drawable/bt_background_app"
            android:filterTouchesWhenObscured="true"
            android:text="@string/button_location"
            android:textColor="@color/color_button_default_app" />


    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>