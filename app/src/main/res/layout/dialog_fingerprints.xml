<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#40000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_2"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/background_app">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_dialog_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default_4"
                android:layout_marginBottom="@dimen/margin_default_2"
                android:layout_marginLeft="@dimen/margin_default_4"
                android:layout_marginRight="@dimen/margin_default_4"
                android:textSize="@dimen/font_default_5"
                android:textStyle="bold"
                android:text="@string/message_fingerprint_popup_title"
                android:textColor="@color/text_default_3"/>

            <TextView
                android:id="@+id/tv_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default_2"
                android:layout_marginLeft="@dimen/margin_default_4"
                android:layout_marginRight="@dimen/margin_default_4"
                android:textSize="@dimen/font_default_2"
                android:text="@string/message_fingerprint_popup"
                android:textColor="@color/text_default_3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_4"
                android:layout_marginRight="@dimen/margin_default_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_fingerprint"/>

                <TextView
                    android:id="@+id/tv_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:textSize="@dimen/font_default_2"
                    android:text="@string/message_fingerprint_sensor"
                    android:textColor="@color/text_default_3"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_default_4"
                android:gravity="right">


                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default_2"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/bt_cancel_up"
                    android:textColor="@color/text_default_13"
                    android:textSize="@dimen/font_default_2"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>