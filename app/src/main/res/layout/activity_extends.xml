<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/snackbarlocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background_dialog_activity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_2"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="#ffffff">


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:textSize="@dimen/font_default_2"
                    android:text="@string/title_extends"
                    android:textColor="@color/text_default_6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:textSize="@dimen/font_default_0"
                    android:text="@string/description_extends_1"
                    android:textColor="@color/text_default_3"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginBottom="@dimen/margin_default_4"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:textSize="@dimen/font_default_1"
                    android:text="@string/description_extends_2"
                    android:textColor="@color/text_default_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:layout_marginBottom="@dimen/margin_default_1"
                    android:background="@color/line_default_2">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_default_1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default_4"
                            android:layout_marginRight="@dimen/margin_default_1"
                            android:textSize="@dimen/font_default_4"
                            android:text="@string/new_data_extends"
                            android:textColor="@color/text_default_6"/>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_default_0"
                            android:textStyle="bold"
                            android:text="20/10/2016"
                            android:textColor="@color/text_default_7"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_default_1"
                            android:textSize="@dimen/font_default_4"
                            android:text="@string/value_extends"
                            android:textColor="@color/text_default_6"/>

                        <TextView
                            android:id="@+id/tv_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_default_0"
                            android:textStyle="bold"
                            android:text="R$ 10.0000,00"
                            android:textColor="@color/text_default_7"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:layout_marginBottom="@dimen/margin_default_1"
                    android:background="@color/line_default_2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_default_4"
                    android:layout_marginBottom="@dimen/margin_default_4"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default_4"
                        android:layout_marginRight="@dimen/margin_default_2"
                        android:button="@drawable/checkbox_login"
                        android:filterTouchesWhenObscured="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_default_2"
                            android:textSize="@dimen/font_default_0"
                            android:textColor="@color/text_default_3"
                            android:gravity="left"
                            android:text="@string/extends_warning"/>


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_check_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default_4"
                    android:layout_marginRight="@dimen/margin_default_4"
                    android:layout_marginBottom="@dimen/margin_default_2"
                    android:textSize="@dimen/font_default_0"
                    android:textColor="@color/text_default_8"
                    android:text="@string/message_check_box"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                        android:id="@+id/bt_ok"
                        style="@style/ButtonDefault"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_default_2"
                        android:background="@drawable/bt_background_app"
                        android:text="@string/button_ok"
                        android:textColor="@color/color_button_default_app" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginBottom="@dimen/margin_default_2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <br.com.libertyseguros.mobile.view.custom.TextViewCustom
                        android:id="@+id/tv_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/margin_default_4"
                        android:layout_marginLeft="@dimen/margin_default_1"
                        android:textSize="@dimen/font_default_4"
                        android:textColor="@color/text_default_6"
                        android:gravity="left"
                        android:text="@string/terms_extends"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default_2"
                    android:textSize="@dimen/font_default_1"
                    android:gravity="center"
                    android:textColor="@color/text_default_2"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

