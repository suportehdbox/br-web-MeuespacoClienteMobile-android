<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbarlocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bg_club"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_club" />


                <ImageView
                    android:id="@+id/iv_logo_club"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_margin="@dimen/margin_default_5"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_club" />

                <TextView
                    android:id="@+id/tv_title_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginBottom="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_6"
                    android:layout_marginRight="@dimen/margin_default_6"
                    android:text="@string/title_club"
                    android:textColor="@color/text_default_6"
                    android:textSize="@dimen/font_default_1" />


                <TextView
                    android:id="@+id/tv_descritption_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginBottom="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_6"
                    android:layout_marginRight="@dimen/margin_default_6"
                    android:text="@string/descritption_club"
                    android:textColor="@color/text_default_6"
                    android:textSize="@dimen/font_default_1" />

                <LinearLayout
                    android:id="@+id/ll_login_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_login_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default_2"
                        android:layout_marginBottom="@dimen/margin_default_2"
                        android:layout_marginLeft="@dimen/margin_default_5"
                        android:layout_marginRight="@dimen/margin_default_5"
                        android:text="@string/login_club"
                        android:textColor="@color/text_default_1"
                        android:visibility="gone"
                        android:textSize="@dimen/font_default_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                            android:id="@+id/bt_login"
                            style="@style/ButtonDefault"
                            android:layout_width="wrap_content"
                            android:background="@drawable/bt_background_1"
                            android:text="@string/button_login"
                            android:textColor="@color/color_button_default_2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_default_2"
                        android:orientation="horizontal"
                        android:visibility="gone">"

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default_4"
                            android:gravity="center"
                            android:text="@string/forgot_password"
                            android:textColor="@color/text_default_6"
                            android:textSize="@dimen/font_default_0" />

                        <br.com.libertyseguros.mobile.view.custom.TextViewCustom
                            android:id="@+id/tv_change_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default_2"
                            android:gravity="center"
                            android:text="@string/forgot_now"
                            android:textColor="@color/text_default_5"
                            android:textSize="@dimen/font_default_0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                            android:id="@+id/bt_register"
                            style="@style/ButtonDefault"
                            android:layout_width="wrap_content"
                            android:background="@drawable/bt_background_3"
                            android:text="@string/button_register"
                            android:textColor="@color/color_button_default_1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_login_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default_2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                        android:id="@+id/bt_club"
                        style="@style/ButtonDefault"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bt_background_3"
                        android:text="@string/button_club"
                        android:textColor="@color/color_button_default_1" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>