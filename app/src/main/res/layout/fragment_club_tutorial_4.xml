<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_home"
    android:orientation="vertical"
    android:weightSum="6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
        <ImageView
            android:id="@+id/img_club"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:paddingTop="@dimen/margin_default_4"
            android:paddingHorizontal="@dimen/margin_default_10"
            android:src="@drawable/imagem_celular" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_club"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_default_4"
        android:text="@string/clube_final_logado"
        android:lines="3"
        android:textSize="@dimen/font_default_5"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeStepGranularity="1sp"
        android:textColor="@color/blueDefault"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/ll_terms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_default_4"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkbox_clube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:filterTouchesWhenObscured="true" />

        <TextView
            android:id="@+id/txt_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_default"
            android:filterTouchesWhenObscured="true"
            android:gravity="center_vertical"
            android:text="@string/novos_termos"
            android:textColor="@color/blueDefault"
            android:textSize="@dimen/font_default_3"
            app:autoSizeMaxTextSize="@dimen/font_default_3"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/bt_acessar_clube"
            style="@style/ButtonDefault"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/margin_default_5"
            android:background="@drawable/button_white"
            android:enabled="false"
            android:filterTouchesWhenObscured="true"
            android:text="@string/acessar_club_button"
            android:textColor="@color/color_button_default_1"
            android:textSize="@dimen/font_default_2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_login_club"
            style="@style/ButtonDefault"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/margin_default_5"
            android:background="@drawable/button_blue"
            android:filterTouchesWhenObscured="true"
            android:text="@string/button_login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_default_2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_register_club"
            style="@style/ButtonDefault"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/margin_default_5"
            android:background="@drawable/button_white"
            android:filterTouchesWhenObscured="true"
            android:text="@string/button_register"
            android:textColor="@color/color_button_default_1"
            android:textSize="@dimen/font_default_2"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>