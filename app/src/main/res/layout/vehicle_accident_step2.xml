<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbarlocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_default_2"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_default_2"
            android:layout_marginLeft="@dimen/margin_default_4"
            android:layout_marginRight="@dimen/margin_default_4"
            android:layout_marginTop="@dimen/margin_default_4"
            android:textStyle="bold"
            android:textColor="@color/text_default_6"
            android:text="@string/vehicle_accident_title_1_step_2"/>

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default_2"
            android:layout_marginRight="@dimen/margin_default_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:id="@+id/ll_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_default_2"
                android:orientation="vertical">

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default_2"
            android:layout_marginRight="@dimen/margin_default_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_2"
                    android:layout_marginRight="@dimen/margin_default_2"
                    android:textSize="@dimen/font_default_1"
                    android:textColor="@color/text_default_6"
                    android:gravity="center"
                    android:text="@string/vehicle_accident_title_2_step_2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_default_2"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default_2"
                            android:layout_marginRight="@dimen/margin_default_2"
                            android:button="@drawable/checkbox_va"/>

                            <TextView
                                android:id="@+id/tv_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_default_2"
                                android:textSize="@dimen/font_default_1"
                                android:textColor="@color/text_default_6"
                                android:gravity="center"
                                android:text="@string/vehicle_accident_option_1_step_2"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/margin_default_2"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default_2"
                            android:layout_marginRight="@dimen/margin_default_2"
                            android:button="@drawable/checkbox_va"/>

                        <TextView
                            android:id="@+id/tv_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_default_2"
                            android:textSize="@dimen/font_default_1"
                            android:textColor="@color/text_default_6"
                            android:gravity="center"
                            android:text="@string/vehicle_accident_option_2_step_2"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_content_part3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_default_2"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll_content_part1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_default_16"
                                android:layout_marginLeft="@dimen/margin_default_4"
                                android:layout_marginRight="@dimen/margin_default_2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/margin_default_2"
                                        android:textSize="@dimen/font_default_0"
                                        android:textColor="@color/hint_default_1"
                                        android:gravity="left"
                                        android:text="@string/hint_birthday"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/margin_default"
                                    android:background="@color/line_default_1"/>

                                <TextView
                                    android:id="@+id/tv_check_error_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/font_default_0"
                                    android:textColor="@color/text_default_8"
                                    android:text="@string/message_error_date"
                                    android:visibility="gone"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_content_part2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_2"
                android:src="@drawable/step_two"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                    android:id="@+id/bt_next_step_2"
                    style="@style/ButtonDefault"
                    android:layout_width="wrap_content"
                    android:text="@string/button_next"
                    android:textColor="@color/color_button_default_app"
                    android:background="@drawable/bt_background_small"/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_default_4"
                android:layout_weight="10"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_default_3"
                        android:textSize="@dimen/font_default_1"
                        android:text="@string/speak_liberty_part1" />

                    <br.com.libertyseguros.mobile.view.custom.TextViewCustom
                        android:id="@+id/tv_speak_liberty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default_2"
                        android:textColor="@color/text_default_5"
                        android:textSize="@dimen/font_default_1"
                        android:text="@string/speak_liberty_part2" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>