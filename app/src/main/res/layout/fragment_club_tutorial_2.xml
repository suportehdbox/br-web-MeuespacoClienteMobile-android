<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_home"
    android:weightSum="2"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_default_4"
            android:textColor="@color/blueDefault"
            android:gravity="center_horizontal"
            android:lines="5"
            android:paddingTop="@dimen/margin_default_6"
            android:text="@string/clube_familia"
            android:textAlignment="center"
            android:textSize="@dimen/font_default_5"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/imagem_famila"
        android:padding="@dimen/margin_default_4"
        android:layout_weight="0.9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"></LinearLayout>


</LinearLayout>