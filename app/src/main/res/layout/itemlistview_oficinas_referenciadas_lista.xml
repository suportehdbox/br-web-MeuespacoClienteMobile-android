<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 
    		android:orientation="horizontal" >

	    <LinearLayout 
	        android:id="@+id/layoutDadosOficina"
	        android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:orientation="vertical" >

		    <TextView
		        android:id="@+id/textItemTituloOficina"
		        style="@style/custom_itemlistview_simple"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:text="2001 HP"
		        android:drawable="@android:color/transparent">
		    </TextView>
	        
		    <TextView
		        android:id="@+id/textItemEnderecoOficina"
		        style="@style/custom_itemlistview_simple"
		        android:textSize="12sp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:text="Rua Climaco Barbosa, N.256. Cambuci. SÃ£o Paulo"
		        android:drawable="@android:color/transparent">
		    </TextView>
		    
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="0.3"
	    	android:gravity="right"
	    	android:layout_gravity="center_vertical"
	    	android:orientation="vertical">
		    
	        <TextView
		        android:id="@+id/textItemDistanciaOficina"
		        style="@style/custom_itemlistview_simple"
		        android:textSize="15sp"
		        android:textColor="@color/blue_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:text="1,8Km"
		        android:drawable="@android:color/transparent">	
		    </TextView>
	        
	    </LinearLayout>

	</LinearLayout>

</LinearLayout>