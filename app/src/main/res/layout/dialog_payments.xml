<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_2"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_2"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_4"
            android:gravity="center"
            android:text="@string/cod_title"
            android:textSize="@dimen/font_default_2"
            android:textColor="@color/text_default_3"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_4"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_2"
                android:layout_marginRight="@dimen/margin_default_2"
                android:layout_marginStart="@dimen/margin_default_2"
                android:layout_marginEnd="@dimen/margin_default_2"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_payment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="TextView"
                        android:textSize="@dimen/font_default_2"
                        />

                    <TextView
                        android:id="@+id/txt_payment_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="R$ 209,95"
                        android:textSize="@dimen/font_default_2"
                        android:textColor="@color/text_default_7"
                        android:visibility="gone"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_default_2"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/bt_payment1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/round_button"
                        android:filterTouchesWhenObscured="true"
                        android:scaleType="fitCenter"
                        android:stateListAnimator="@null"
                        android:text="@string/Consultar"
                        android:textColor="@color/text_round_button"
                        android:textSize="@dimen/font_default_0" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_divisor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin_default_2"
                android:orientation="horizontal"
                android:background="@color/line_default_1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_default_2"
                    android:layout_marginLeft="@dimen/margin_default_2"
                    android:layout_marginRight="@dimen/margin_default_2"
                    android:layout_marginStart="@dimen/margin_default_2"
                    android:layout_marginEnd="@dimen/margin_default_2"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_payment2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="TextView"
                            android:textSize="@dimen/font_default_2"/>

                        <TextView
                            android:id="@+id/txt_payment_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:text="R$ 209,95"
                            android:textSize="@dimen/font_default_2"
                            android:textColor="@color/text_default_7"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_default_2"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <Button
                            android:id="@+id/bt_payment2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/round_button"
                            android:filterTouchesWhenObscured="true"
                            android:scaleType="fitCenter"
                            android:shadowRadius="0"
                            android:stateListAnimator="@null"
                            android:text="@string/ConsultarPagamento"
                            android:textColor="@color/text_round_button"
                            android:textSize="@dimen/font_default_0" />
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
