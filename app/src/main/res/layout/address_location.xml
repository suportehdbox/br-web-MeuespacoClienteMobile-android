<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_style_activity"
    tools:context=".AddressLocationActivity" >

    <include layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="0sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout style="@style/linear_layout" >

                <include layout="@layout/address" />
            </LinearLayout>

            <Button
                android:id="@+id/find_on_map_button"
                style="@style/btn_azul"
                android:drawableLeft="@mipmap/ic_localizacao"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:text="@string/btn_minha_localizacao" >
		    </Button>
            
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/button_bar" />

</LinearLayout>