<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background_home"
    android:orientation="vertical"
    android:weightSum="6"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_default_4"
        android:text="@string/clube_oportunidades"
        android:lines="3"
        android:textSize="@dimen/font_default_5"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/blueDefault"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeStepGranularity="1sp"
         />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/margin_default_10"
        android:src="@drawable/imagem_loja" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_default_4"
        android:text="@string/clube_oportunidades_itens"
        android:textSize="@dimen/font_default_5"
        android:lineHeight="@dimen/margin_default_6"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="22sp"
            android:textColor="@color/blueDefault"
        app:autoSizeStepGranularity="1sp"
        android:gravity="center"
        />
    </LinearLayout>
</LinearLayout>