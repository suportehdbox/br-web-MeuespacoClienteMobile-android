<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Lgpd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_app">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default_2"
            android:layout_marginRight="@dimen/margin_default_2"
            android:layout_marginTop="@dimen/margin_default_3"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tratamento_dados"
            android:textSize="@dimen/font_default_5"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/text_default_5"
            android:layout_margin="@dimen/margin_default_5" />
            <TextView
                android:id="@+id/tv_dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_5"
                android:layout_marginRight="@dimen/margin_default_5"
                android:textSize="@dimen/font_default_2"
                android:text="@string/lgpd_grupo_liberty"/>

                <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                    android:id="@+id/bt_acessar_canal"
                    style="@style/ButtonDefault"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/margin_default_5"
                    android:background="@drawable/bt_background_3"
                    android:layout_gravity="center"
                    android:text="@string/acessar_canal_comunicacao"
                    android:textColor="@color/color_button_default_1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>