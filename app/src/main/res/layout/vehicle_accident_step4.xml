<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbarlocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_app">

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_default_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_default_2"
                android:layout_marginLeft="@dimen/margin_default_4"
                android:layout_marginRight="@dimen/margin_default_4"
                android:layout_marginTop="@dimen/margin_default_4"
                android:textColor="@color/text_default_6"
                android:textStyle="bold"
                android:text="@string/vehicle_accident_title_1_step_4"/>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_2"
                android:layout_marginRight="@dimen/margin_default_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default_4"
                        android:layout_marginLeft="@dimen/margin_default_4"
                        android:layout_marginRight="@dimen/margin_default_4"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:layout_marginRight="@dimen/margin_default_2"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                                    android:id="@+id/iv_warning"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="@dimen/margin_default"
                                    android:layout_marginLeft="@dimen/margin_default_1"
                                    android:layout_gravity="center|top"
                                    android:src="@drawable/icon_question_grey" />

                                <EditText
                                    android:id="@+id/et_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_default_2"
                                    android:textSize="@dimen/font_default_2"
                                    android:gravity="left|top"
                                    android:lines="5"
                                    android:textColor="@color/hint_default_1"
                                    android:hint="@string/report_here"
                                    android:background="@android:color/transparent" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_default"
                            android:background="@color/line_default_1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_default_2"
                            android:orientation="vertical"/>

                    </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_2"
                android:layout_marginRight="@dimen/margin_default_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/font_default_2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_default"
                            android:textSize="@dimen/font_default_1"
                            android:textColor="@color/text_default_7"
                            android:gravity="left"
                            android:text="@string/icon_audio"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_weight="1">

                        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                            android:id="@+id/iv_audio"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/audio"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical">
                            <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                                android:id="@+id/iv_trash"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="@dimen/margin_default_2"
                                android:adjustViewBounds="true"
                                android:src="@drawable/trash"
                                android:visibility="gone"/>

                            <Chronometer
                                android:id="@+id/chronometer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_default_2"
                                android:textColor="@color/text_default_3"
                                android:format="%s"
                                android:text="Chronometer"
                                android:textSize="@dimen/font_default_2"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_2"
                android:layout_marginRight="@dimen/margin_default_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/font_default_2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_default"
                                android:textSize="@dimen/font_default_1"
                                android:textColor="@color/text_default_4"
                                android:gravity="left"
                                android:text="@string/icon_photo"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <br.com.libertyseguros.mobile.view.custom.ImageViewCustom
                                android:id="@+id/iv_photo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_camera"/>

                            <TextView
                                android:id="@+id/tv_message_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_default_2"
                                android:textSize="@dimen/font_default_1"
                                android:textColor="@color/text_default_3"
                                android:gravity="left"
                                android:text="@string/image_delete"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                            <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/ll_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:alignContent="flex_start"
                                app:alignItems="flex_start"
                                app:flexWrap="wrap"
                                app:showDivider="beginning|middle"
                                app:dividerDrawable="@null"
                                app:flexDirection="row">
                                </com.google.android.flexbox.FlexboxLayout>

                    </LinearLayout>

                        <TextView
                            android:id="@+id/tv_photo_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_default_2"
                            android:textSize="@dimen/font_default_1"
                            android:textColor="@color/text_default_2"
                            android:gravity="left"
                            android:text="@string/icon_photo"
                            android:visibility="gone"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default_2"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default_2"
                    android:src="@drawable/step_four"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <br.com.libertyseguros.mobile.view.custom.ButtonViewCustom
                        android:id="@+id/bt_next_step_4"
                        style="@style/ButtonDefault"
                        android:layout_width="wrap_content"
                        android:text="@string/button_next"
                        android:textColor="@color/color_button_default_app"
                        android:background="@drawable/bt_background_small"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_default_4"
                android:layout_weight="10"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_default_3"
                        android:textSize="@dimen/font_default_1"
                        android:text="@string/speak_liberty_part1" />

                    <br.com.libertyseguros.mobile.view.custom.TextViewCustom
                        android:id="@+id/tv_speak_liberty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default_2"
                        android:textColor="@color/text_default_5"
                        android:textSize="@dimen/font_default_1"
                        android:text="@string/speak_liberty_part2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_message_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default_3"
            android:textSize="@dimen/font_default_1"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/text_default_2"/>

    </LinearLayout>





</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>