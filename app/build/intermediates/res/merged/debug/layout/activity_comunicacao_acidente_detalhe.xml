<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/main_content"
    tools:context=".ComunicacaoAcidenteDetalheActivity" >

    <include layout="@layout/navigation_bar" />

    <FrameLayout
        style="@style/wrap_height_fill_width"
        android:layout_marginBottom="5sp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/lvwClaimDetail"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@drawable/list_selector" />
    </FrameLayout>

    <Button
        android:id="@+id/send_info_button"
        style="@style/orange_button_wide"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:onClick="sendInfoButtonPressed"
        android:text="@string/btn_enviar_sinistro">
    </Button>

    <Button
        android:id="@+id/delete_claim_button"
        style="@style/orange_button_wide"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:onClick="deleteClaimButtonPressed"
        android:text="@string/delete"
        android:visibility="gone" >
    </Button>

</LinearLayout><!-- From: file:/SVN/WEB/trunk/LibertySegurosBrasil-Android/app/src/main/res/layout/activity_comunicacao_acidente_detalhe.xml -->