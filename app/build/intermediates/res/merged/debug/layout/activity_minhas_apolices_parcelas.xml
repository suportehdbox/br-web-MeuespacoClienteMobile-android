<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    
    style="@style/layout_style_activity"
    tools:context=".MinhasApolicesParcelasActivity" 
    android:background="@color/white">

	<include
        layout="@layout/navigation_bar" />

 	<LinearLayout
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:background="@color/gray_title"
 	    android:orientation="vertical" >
 	    
 		<TextView
 		    android:id="@+id/textItemTituloPgtoMinhasApolices"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:textColor="@color/black"
 		    android:textStyle="bold"
 		    android:layout_marginLeft="5sp"
 		    android:layout_marginTop="10sp"
 		    android:layout_marginBottom="10sp"
 		    android:gravity="center_vertical"
 		    android:text="@string/text_informacoes_pagamento" />	 		
	</LinearLayout>

	<ScrollView
	  android:id="@+id/table_scroll"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginRight="2dp"
	  android:layout_marginLeft="2dp">

		   <TableLayout
		       android:id="@+id/tableParcelas"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content" >
	
		  </TableLayout>
	 </ScrollView>

