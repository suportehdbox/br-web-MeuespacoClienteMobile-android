<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_style_activity"
    tools:context=".PoliceInformationActivity" >

    <include layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <TableLayout style="@style/linear_layout" >

                    <TableRow style="@style/input_field_row" >

                        <EditText
                            android:id="@+id/entidade"
                            style="@style/edit_text"
                            android:hint="@string/entidade"
                            android:inputType="textFilter" />
                    </TableRow>

                    <TableRow style="@style/input_field_row" >

                        <EditText
                            android:id="@+id/localidade"
                            style="@style/edit_text"
                            android:hint="@string/localidade"
                            android:inputType="textFilter"
                            android:lines="1" />
                    </TableRow>

                        <include layout="@layout/note" />
                        
                </TableLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/button_bar"/>    

</LinearLayout><!-- From: file:/SVN/WEB/trunk/LibertySegurosBrasil-Android/app/src/main/res/layout/activity_police_information.xml -->