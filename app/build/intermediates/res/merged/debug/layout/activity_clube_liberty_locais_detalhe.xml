<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    
    style="@style/layout_style_activity"
    tools:context=".ClubeLibertyLocaisDetalheActivity" >

	<include
        layout="@layout/navigation_bar" />

	<FrameLayout
        android:layout_weight="1"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    >  
		<WebView
	        android:id="@+id/webClubeLiberty"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|top"/>
	</FrameLayout>
	
	<LinearLayout
	    android:id="@+id/layClubeLibertyBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

	    <Button
	        android:id="@+id/btnClubeLibertyMapa"
			style="@style/orange_button_wide"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
			android:layout_marginLeft="15sp"
			android:layout_marginRight="2sp"
	        android:text="@string/btn_mapa"	/>
	        
	    <Button
	        android:id="@+id/btnClubeLibertyLigar"
			style="@style/orange_button_wide"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
			android:layout_marginLeft="2sp"
			android:layout_marginRight="15sp"
	        android:text="@string/btn_ligar" />

	</LinearLayout>

</LinearLayout><!-- From: file:/SVN/WEB/trunk/LibertySegurosBrasil-Android/app/src/main/res/layout/activity_clube_liberty_locais_detalhe.xml -->