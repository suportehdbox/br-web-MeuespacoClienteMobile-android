<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/claim_list_item">
    
    <LinearLayout
        style="@style/wrap_height_fill_width"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout 
            style="@style/wrap_height_fill_width"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/claim_title" 
                android:text="@string/auto_claim_title" 
                style="@style/claim_list_title" 
                android:layout_centerVertical="true"></TextView>
            <TextView 
                android:id="@+id/claim_status_icon" 
                style="@style/claim_list_status" 
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"></TextView>
        </RelativeLayout>

        <LinearLayout
            style="@style/wrap_height_fill_width">
            <TextView
                android:id="@+id/claim_type_label"
                android:text="@string/claim_type_label"
                style="@style/claim_list_label" />
            <TextView
                android:id="@+id/claim_type"
                style="@style/claim_list_detail" />
        </LinearLayout>

        <LinearLayout
            style="@style/wrap_height_fill_width">
            <TextView
                android:id="@+id/claim_time_label"
                android:text="@string/incident_date_time_label"
                style="@style/claim_list_label" />
            <TextView
                android:id="@+id/claim_time"
                style="@style/claim_list_detail" />
        </LinearLayout>
                
        <LinearLayout
            style="@style/wrap_height_fill_width">
            <TextView
                android:id="@+id/claim_location_label"
                android:text="@string/incident_location_label"
                style="@style/claim_list_label" />
            <TextView
                android:id="@+id/claim_location"
                style="@style/claim_list_detail" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
