<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/application_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/screenpolicydetails_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/ctrl_include_header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <TableLayout
                android:id="@+id/layoutPolicyDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/Policy"
                        android:textColor="@color/ColorBottom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewPolicy"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorMenu"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#B5B5B5" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/Name"
                        android:textColor="@color/ColorBottom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorMenu"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#B5B5B5" />

                <TableRow
                    android:id="@+id/row1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/viewFieldLeg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="FieldLeg1"
                        android:textColor="@color/ColorBottom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewField1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorMenu"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:id="@+id/line2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#B5B5B5" />

                <TableRow
                    android:id="@+id/row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/viewFieldLeg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="FieldLeg2"
                        android:textColor="@color/ColorBottom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewField2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorMenu"
                        android:textStyle="bold" />
                </TableRow>

                <View
                    android:id="@+id/line3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#B5B5B5" />

                <TableRow
                    android:id="@+id/row3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/viewFieldLeg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="FieldLeg3"
                        android:textColor="@color/ColorBottom"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewField3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorMenu"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_background"
                android:text="@string/Save"
                android:textColor="@color/ColorMenu"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
    <!--
      <include 
        layout="@layout/ctrl_include_footer" 
        android:layout_width="fill_parent" />
    -->

</LinearLayout>