    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/viewStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/editAddress"
                    android:paddingRight="15dp"
                    android:text="@string/street"
                    android:textColor="@color/ColorListSuggestions"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="20dp"
                    android:text="Street"
                   android:textColor="@color/ColorMenu"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/ColorScreenBackground" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/viewHouseNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/editHouseNumber"
                    android:paddingRight="15dp"
                    android:text="@string/HouseNumber"
                    android:textColor="@color/ColorListSuggestions"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editHouseNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="57dp"
                    android:ems="10"
                    android:paddingLeft="20dp"
                    android:text="Street"
                    android:textColor="@color/ColorMenu"
                    android:background="@drawable/line_separater"
                    android:textSize="18sp"
                    android:textStyle="bold" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/ColorScreenBackground" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/viewState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/editState"
                    android:paddingRight="15dp"
                    android:text="@string/State"
                    android:textColor="@color/ColorListSuggestions"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="20dp"
                    android:text="State"
                   android:textColor="@color/ColorMenu"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/ColorScreenBackground" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/viewCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/editCity"
                    android:paddingRight="15dp"
                    android:text="@string/City"
                    android:textColor="@color/ColorListSuggestions"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="20dp"
                    android:text="City"
                   android:textColor="@color/ColorMenu"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            
            <Button
            android:id="@+id/btnAddEdit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"            
           
                    android:textColor="#9B592F"
                    android:textScaleX="1"
                    android:textStyle="bold"
             android:text="@string/Save"
            android:background="@drawable/yellow_background"
            android:visibility="visible" />
        </LinearLayout>
        
    </ScrollView>

