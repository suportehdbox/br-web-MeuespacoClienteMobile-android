<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/application_background" >
    
    <include layout="@layout/ctrl_include_header"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

	    <LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical"
			    android:paddingLeft="20dp"
			    android:paddingTop="20dp" >
			
			    <ImageView
			        android:id="@+id/imgIcon"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/contact_pin" />
			
			    <TextView
			        android:id="@+id/viewGarageName"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textStyle="bold" 
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			</LinearLayout>

			<TableLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" 
			    android:background="@drawable/corner"
			    android:layout_margin="10dp" >

			    <TableRow
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_margin="10dp"
			        android:gravity="center_vertical" >

			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#000000"
			            android:paddingRight="5dp"
			            android:text="@string/Address"
			            android:textStyle="bold" />
			        <TextView
			            android:id="@+id/viewAddress"
			            android:layout_width="200dp"
			            android:layout_height="wrap_content"
			            android:textColor="#000000" />			        

			    </TableRow>

			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1dp" 
			        android:background="#B5B5B5" />
			    
			    <TableRow
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:layout_margin="10dp"
			        android:gravity="center_vertical" >

			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#000000"
			            android:paddingRight="5dp"
			            android:text="@string/Distance"
			            android:textStyle="bold" />
			        <TextView
			            android:id="@+id/viewDistance"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#000000" />			        

			    </TableRow>		
			    
			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1dp" 
			        android:background="#B5B5B5" />

			    <TableRow
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="10dp"
			        android:gravity="center_vertical" >
			        
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#000000"
			            android:paddingRight="5dp"
			            android:text="@string/Phone" 
			            android:textStyle="bold" />
			        <TextView
			            android:id="@+id/viewPhoneNumber"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#000000"
			            android:layout_weight="1" />

			        <ImageView
			            android:id="@+id/imgCall"
			            android:layout_width="30dp"
			            android:layout_height="30dp"
			            android:src="@drawable/call" />
			        
			    </TableRow>
			    
			</TableLayout>
	
	    </LinearLayout>

    </ScrollView>
        
    <include 
        layout="@layout/ctrl_include_footer" 
        android:layout_width="fill_parent"/>
        
</LinearLayout><!-- From: file:/SVN/WEB/trunk/LibertySegurosBrasil-Android/directAssistLiberty/src/main/res/layout/screen_accredited_establishment_details.xml -->